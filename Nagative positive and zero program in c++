#include <iostream>
using namespace std;

int main() {
    int num;

    // Input from user
    cout << "Enter a number: ";
    cin >> num;

    // If-Else If-Else Ladder to check number type
    if (num > 0) {
        cout << "The number is Positive." << endl;
    } else if (num < 0) {
        cout << "The number is Negative." << endl;
    } else {
        cout << "The number is Zero." << endl;
    }

    return 0;
}# C-PROGRAM-
